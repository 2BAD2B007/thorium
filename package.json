{
  "name": "thorium",
  "version": "2.0.0",
  "description": "Starship Simulator Controls",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Thorium-Sim/thorium.git"
  },
  "author": "Alex Anderson <alexanderson1993@gmail.com>",
  "bugs": {
    "url": "https://github.com/Thorium-Sim/thorium/issues"
  },
  "license": "Apache-2.0",
  "homepage": "./",
  "languages": [
    "es",
    "fr",
    "it",
    "nl",
    "de"
  ],
  "scripts": {
    "start": "npm-run-all --parallel start:client",
    "start:client": "react-scripts start",
    "start:server": "nodemon ./server/index.js -e js,graphql --ignore snapshots/ --exec babel-node",
    "build": "NODE_ENV=production npm-run-all build:client build:server build:env",
    "build:client": "react-scripts --max_old_space_size=4096 build",
    "build:env": "node ./scripts/build-env.js",
    "test": "is-ci \"test:coverage\" \"test:watch\"",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "sentry-upload": "node ./scripts/sentryFiles.js",
    "translate": "babel-node scripts/manageTranslations.js",
    "plop": "plop",
    "semantic-release": "semantic-release",
    "commit": "git-cz",
    "eject": "react-scripts eject",
    "lint": "jest --config test/jest.eslint.js",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|mdx|graphql|vue)\"",
    "format:different": "prettier --list-different \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|mdx|graphql|vue)\"",
    "validate": "CI=true npm-run-all --parallel test:coverage typecheck format:different",
    "lint-staged-validate": "lint-staged"
  },
  "nodemonConfig": {
    "ignore": [
      "src/*",
      "public/*",
      ".config/*",
      "types/*"
    ]
  },
  "browserslist": {
    "production": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm-run-all lint-staged-validate typecheck"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "jest --findRelatedTests"
    ],
    "**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|mdx|graphql|vue)": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "branch": "master",
    "tagFormat": "${version}",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "zips/thorium-linux.zip",
              "label": "Thorium Linux"
            },
            {
              "path": "zips/thorium-macos.zip",
              "label": "Thorium macOS"
            },
            {
              "path": "zips/thorium-win.exe.zip",
              "label": "Thorium Windows"
            }
          ],
          "successComment": false
        }
      ],
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "npm run bump ${nextRelease.version} && npm run deploy"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json",
            "client/package.json",
            "server/package.json"
          ],
          "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "babelMacros": {
    "styledComponents": {}
  },
  "dependencies": {
    "@babel/polyfill": "^7.6.0",
    "@sentry/node": "^5.7.1",
    "apollo-server-express": "^2.9.6",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-status-monitor": "^1.2.7",
    "fuse.js": "^3.4.5",
    "googleapis": "^44.0.0",
    "graphql-type-json": "^0.3.0",
    "multer": "^1.4.2",
    "ncp": "^2.0.0",
    "simplex-noise": "^2.4.0",
    "yauzl": "^2.10.0",
    "yazl": "^2.5.1"
  },
  "devDependencies": {
    "@apollo/react-hooks": "^3.1.3",
    "@apollo/react-testing": "^3.1.3",
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/node": "^7.6.3",
    "@babel/preset-typescript": "^7.6.0",
    "@blueprintjs/core": "^3.19.1",
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/github": "^5.2.10",
    "@sentry/browser": "^5.7.1",
    "@testing-library/jest-dom": "^4.1.2",
    "@tweenjs/tween.js": "^18.3.1",
    "apollo-cache-hermes": "^0.8.9",
    "apollo-cache-inmemory": "^1.6.3",
    "apollo-client": "^2.6.4",
    "apollo-link": "^1.2.13",
    "apollo-link-context": "^1.0.19",
    "apollo-link-error": "^1.1.12",
    "apollo-link-http": "^1.5.16",
    "apollo-link-ws": "^1.0.19",
    "apollo-utilities": "^1.3.2",
    "babel-plugin-import-glob": "^2.0.0",
    "babel-plugin-transform-node-env-inline": "^0.4.3",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-app": "^9.0.2",
    "bodymovin": "^4.13.0",
    "bootstrap": "^4.3.1",
    "centered-pan-zoom": "^2.0.0",
    "change-case": "^3.1.0",
    "commitizen": "^3.1.1",
    "cz-conventional-changelog": "^2.1.0",
    "dotenv": "^6.2.0",
    "eslint-config-prettier": "^6.4.0",
    "graphql": "^14.5.8",
    "graphql-tag.macro": "^2.0.1",
    "graphqurl": "^0.3.3",
    "history": "^4.10.1",
    "husky": "^2.2.0",
    "is-ci": "^2.0.0",
    "jest-runner-eslint": "^0.7.5",
    "jest-watch-select-projects": "^1.0.0",
    "keycode": "^2.2.0",
    "lint-staged": "^8.1.4",
    "lodash.flowright": "^3.5.0",
    "luxon": "^1.19.3",
    "match-sorter": "^4.0.2",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.4",
    "npm-run-all": "^4.1.5",
    "papaparse": "^5.1.0",
    "prando": "^5.1.1",
    "prettier": "^1.16.4",
    "preval.macro": "^3.0.0",
    "progress": "^2.0.3",
    "random-words": "^1.1.0",
    "rc-menu": "^8.0.0-alpha.1",
    "react": "^16.10.2",
    "react-addons-transition-group": "^15.6.2",
    "react-animated-number": "^0.4.4",
    "react-apollo": "^3.1.3",
    "react-color": "^2.17.3",
    "react-dom": "^16.10.2",
    "react-draggable": "^4.0.3",
    "react-fontawesome": "^1.6.1",
    "react-icons": "^3.7.0",
    "react-intl": "^3.3.2",
    "react-intl-translations-manager": "^5.0.3",
    "react-konami": "^0.6.2",
    "react-measure": "^2.3.0",
    "react-media-player": "^0.7.9",
    "react-mosaic-component": "^3.2.0",
    "react-qrcode-hook": "^1.1.0",
    "react-rangeslider": "^2.2.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^3.2.0",
    "react-sortable-hoc": "^1.10.1",
    "react-table": "^6.10.3",
    "react-typing": "^1.0.0",
    "reactour": "^1.15.3",
    "reactstrap": "^7.0.0",
    "semantic-release": "^15.13.12",
    "sentry-files": "^1.0.1",
    "showdown": "^1.9.0",
    "sine-waves": "^0.3.0",
    "styled-components": "^4.4.0",
    "subscriptions-transport-ws": "^0.9.16",
    "svg-to-jsx": "^1.0.2",
    "three": "^0.109.0",
    "three-obj-loader": "^1.1.3",
    "typescript": "^3.6.4"
  }
}
